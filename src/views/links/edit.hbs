<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-body">
                    <form action="/links/edit/{{link.id}}" method="POST">
                        <div class="form-group mt-4">
                            <input type="text" value="{{link.title}}" class="form-control" name="title"
                                placeholder="Title" autofocus>
                        </div>
                        <div class="form-group mt-4">
                            <input type="url" value="{{link.url}}" class="form-control" name="url" placeholder="URL">
                        </div>
                        <div class="form-group mt-4">
                            <textarea name="description" value="{{link.description}}" rows="2" class="form-control"
                                placeholder="Description"></textarea>
                        </div>
                        <div class="form-group mt-4">
                            <button class="btn btn-success btn-block">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>